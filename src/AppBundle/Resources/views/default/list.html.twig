{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col l4 m4 s13">
            <div class="card-panel darken-1 z-depth-3">
                <h4>Add post</h4>
              <span>
                  {{ render(controller('AppBundle:Default:postForm')) }}
              </span>
            </div>
        </div>

        <div class="col l8 m8 s12">
            {% for post in posts %}
                <div class="row">
                    <div class="col s12 m12">
                        <div class="card blue-grey darken-1 z-depth-3">
                            <div class="card-content white-text">
                                <span class="card-title">{{ post.title }}</span>
                                <p class="grey-text">{{ post.created | date("Y-m-d H:i:s") }}</p>
                                <p>{{ post.content }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="well">Sorry there are not posts found!</div>
            {% endfor %}
        </div>

    </div>

{% endblock %}